<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id)%> 
        <%= link_to "edit", edit_book_path(book.id)%>
        <%= link_to "Destroy", book_path(book.id), method: :delete%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
<h2><%= @book.errors.count%>errorsprohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
